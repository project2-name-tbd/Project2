{{#each recipes as |recipe|}}
  <div class="row align-center mb-5">
    <div class="col-md-6">
      <h2> {{recipe.title}}</h2>
    </div>

    <div class="col-md-6">
      <h3>{{recipe.description}}</a></h3>
    </div>

    <div class="col-md-6">
      <h3>{{recipe.ingredients}}</a></h3>
    </div>
    <div class="col-md-6">

      <h3>{{recipe.quantity}}</a></h3>
    </div>
    <div class="col-md-6">

      <h3>{{recipe.unitOfMeasure}}</a></h3>
    </div>

    </div>
  </div>
{{/each}}