<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h1 class="recipeTitle">{{recipes.title}}</h1>
    </div>
    {{!-- <div class="col-sm-2 col-md-12 col-lg-6 col-xl-4 col-xxl-4">
      <button class="btn btn-sm btn-secondary mt-3 mb-4">Edit</button>
    </div> --}}
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-8 col-xxl-8">
      <p class="recipeDescription">
        {{recipes.description}}
      </p>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-4 col-xxl-4">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Ingredient</th>
            <th scope="col">Quantity</th>
            <th scope="col">Unit of Measure</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            {{#each recipes.ingredients as |ingredients|}}
            <td>{{term}}</td>
            
            {{#each jsonObj}}
            <td>{{this.0.quantity}}</td>
            <td>{{this.0.unitOfMeasure}}</td>
            {{/each}}
            {{/each}}
            
            
          </tr>
         
          
          
        </tbody>
      </table>
    </div>

  </div>
</div>
</div>