<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h2>Add Recipe</h2>

            <form class="form recipe-form form-control">
                <div class="form-group">
                    <div class="form-group">
                        <label for="recipe-title">Title</label>
                        <input class="form-control" type="text" id="username-signup" />
                    </div>
                    <label for="recipe-description">Description</label>
                    <textarea class="form-control" type="text" id="recipe-description" /></textarea>
                    <label for="recipe-ingredients">Ingredients</label>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Add Ingredients</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn btn-primary mt-3 mb-2" type="submit">Publish</button>
                    <button class="btn btn btn-secondary mt-3 mb-2" type="submit">Draft</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/login.js"></script>