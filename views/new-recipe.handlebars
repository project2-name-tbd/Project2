<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h2>Add Recipe</h2>

            <form id="recipeForm" class="form recipe-form form-control">
                <div class="form-group">
                    <div class="form-group">
                        <label for="recipe-title" class="form-label">Title</label>
                        <input class="form-control" type="text" id="recipeName" />
                    </div>
                    <label for="recipe-description" class="form-label">Description</label>
                    <textarea class="form-control" type="text" id="recipeDescription" /></textarea>
                    <div class="form-control mt-3 pb-3 bg-light">

                        <label for="recipe-ingredients" class="form-label">Ingredients</label>
                        <input class="form-control mb-2" type="text" id="searchIngredient">

                        <label for="recipe-title" class="form-label">Quantity</label>
                        <input class="form-control" type="text"  id="ingredientQuantity"/>

                        <select class="form-select" aria-label="Default select example" id="ingredientMeasurement">
                            <option selected>Select a unit of measure</option>
                            <option value="Teaspoon">Teaspoon</option>
                            <option value="Tablespoon">Tablespoon</option>
                            <option value="Ounce">Ounce</option>
                            <option value="Cup">Cup</option>
                            <option value="Liter">Liter</option>
                        </select>
                    <button class="btn btn btn-secondary" id="addIngredient">add ingredient</button>
                    </div>
                </div>
                <div class="form-group">
                    <button id="publish" class="btn btn btn-primary mt-3 mb-2" type="submit">Publish</button>
                    <button class="btn btn btn-secondary mt-3 mb-2" type="submit">Save as Draft</button>
                </div>
            </form>
            <div>
                <ul id ="ingredientList">

                </ul>
            </div>
        </div>
    </div>
</div>

