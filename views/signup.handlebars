<div class="container-fluid">
  <div class="row">
<div class="col-3">
      <h2>Signup</h2>

      <form class="form signup-form form-control mb-3 mt-3">
        <div class="form-group">
          <label for="username-signup" class="form-label">Name</label>
          <input class="form-control" type="text" id="username-signup" />
        </div>
        <div class="form-group">
          <label for="email-signup" class="form-label">Email</label>
          <input class="form-control" type="email" id="email-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup" class="form-label">Password</label>
          <input class="form-control" type="password" id="password-signup" />
        </div>
        <div class="form-group d-grid mt-4">
          <button class="btn btn-lg btn-primary" type="submit">Submit</button>
        </div>
      </form>
      Already have an account? <a href="/login">Log in</a>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>